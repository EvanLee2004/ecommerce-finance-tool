{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "启动后端服务",
      "type": "shell",
      "command": "${workspaceFolder}/.venv/bin/uvicorn",
      "args": [
        "backend.main:app",
        "--reload",
        "--host",
        "0.0.0.0",
        "--port",
        "8000"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": false
      },
      "problemMatcher": [],
      "isBackground": true,
      "runOptions": {
        "runOn": "default"
      }
    },
    {
      "label": "启动前端服务",
      "type": "shell",
      "command": "npm",
      "args": ["run", "dev"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": false
      },
      "problemMatcher": [],
      "isBackground": true
    },
    {
      "label": "同时启动前后端",
      "dependsOn": [
        "启动后端服务",
        "启动前端服务"
      ],
      "problemMatcher": []
    }
  ]
}
